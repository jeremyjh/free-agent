name:                dashhs
version:             0.1.0.0
author:              Jeremy Huffman
build-type:          Simple
cabal-version:       >=1.8

library
  ghc-options:       -Wall
  hs-source-dirs:    src
  exposed-modules:   Dash, Dash.Runner
  other-modules:
  build-depends:     base == 4.*
                    ,process
                    ,text
                    ,text-format
                    ,basic-prelude

executable dashhs
  ghc-options:       -Wall -threaded -with-rtsopts=-N
  main-is:           Main.hs
  build-depends:     base ==4.5.*, process -any, dashhs 
                    ,text
                    ,text-format
                    ,basic-prelude
  hs-source-dirs:    src

test-suite spec
  type:              exitcode-stdio-1.0
  ghc-options:       -Wall -Werror
  hs-source-dirs:    test
  main-is:           Spec.hs
  build-depends:     base == 4.*
                    ,dashhs
                    ,hspec >= 1.5
                    ,text
                    ,text-format
                    ,basic-prelude
