name:                dashhs
version:             0.1.0.0
author:              Jeremy Huffman
build-type:          Custom 
cabal-version:       >=1.8

-- -fno-warn-unused-imports is temp hack for protobuff-genned code
library 
  ghc-options:       -Wall -Werror -fno-warn-unused-imports 
  hs-source-dirs:    proto, src, dist/build
  other-modules:     
  exposed-modules:   Dash
                   , Dash.Runner
                   , Dash.Store
                   , Dash.Proto
                   , Dash.Proto.Runnable
                   , Dash.Proto.Runnable.NagiosCommand
  build-depends:     base == 4.*
                   , process
                   , text
                   , text-format
                   , basic-prelude
                   , protocol-buffers
                   , protocol-buffers-descriptor
                   , utf8-string
                   , bytestring
                   , leveldb-haskell
                   , data-default
                   , resourcet
                   , transformers

executable dashhs
  ghc-options:       -Wall -Werror -threaded -with-rtsopts=-N -optl-Wl,-rpath,/usr/local/lib,-enable-new-dtags
  main-is:           Main.hs
  build-depends:      base ==4.5.*
                    , process -any
                    , dashhs 
                    , text
                    , text-format
                    , basic-prelude
                    , bytestring
                    , protocol-buffers
                    , protocol-buffers-descriptor
  hs-source-dirs:     src

test-suite spec
  ghc-options:       -optl-Wl,-rpath,/usr/local/lib,-enable-new-dtags
  type:              exitcode-stdio-1.0
  hs-source-dirs:    test
  main-is:           Spec.hs
  build-depends:     base == 4.*
                   , dashhs
                   , hspec >= 1.5
                   , text
                   , text-format
                   , basic-prelude
                   , protocol-buffers
