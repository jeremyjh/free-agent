-- Initial free-agent-cli.cabal generated by cabal init.  For further 
-- documentation, see http://haskell.org/cabal/users-guide/

name:                free-agent-cli
version:             0.0.0.1
synopsis:            Command line and daemon for free-agent.
-- description:         
homepage:            https://free-agent.github.io
license:             BSD3
license-file:        LICENSE
author:              Jeremy Huffman
maintainer:          jeremy@jeremyhuffman.com
-- copyright:           
category:            Control
build-type:          Simple
-- extra-source-files:  
cabal-version:       >=1.10

library
  exposed-modules:     FreeAgent.Cli.CmdArgs
                     , FreeAgent.Cli.Import
                     , FreeAgent.Cli.Export
                     , FreeAgent.Cli.Main
  -- other-modules:       
  -- other-extensions:    
  build-depends:       base >=4.6 && <4.7
                     , free-agent-core == 0.0.0.1
                     , cmdargs
                     , split
                     , lens
                     , directory
                     , shelly
                     , yaml
                     , errors
                     , distributed-process-p2p
  hs-source-dirs:      src
  default-language:    Haskell2010
  ghc-options: -Wall

executable fabin
  main-is:             Main.hs
  build-depends:       base >=4.6.0.1 && <4.7
                     , free-agent-core
                     , free-agent-cli
  default-language:    Haskell2010
  hs-source-dirs:      prog
  ghc-options: -Wall
  ghc-options:         -threaded -rtsopts -with-rtsopts=-N

test-suite spec
    build-depends:
        base >=4.6.0.1 && <4.7,
        free-agent-core -any,
        hspec >=1.11.0 && <1.12
    type: exitcode-stdio-1.0
    main-is: Spec.hs
    buildable: True
    default-language: Haskell2010
    hs-source-dirs: test
    other-modules:
    ghc-options:
